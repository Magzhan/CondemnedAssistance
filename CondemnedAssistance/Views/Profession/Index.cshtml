@model IEnumerable<CondemnedAssistance.Models.Profession>
@{
    Layout = "_Layout";
}
<table>
    @foreach(var p in Model) {
        <tr>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td><a asp-controller="Profession" asp-action="Update" asp-route-id="@p.Id">Edit</a></td>
            @if (User.IsInRole("3")) {
                <td><a asp-controller="Profession" asp-action="Delete" asp-route-id="@p.Id">Delete</a></td>
            }
        </tr>
    }
</table>