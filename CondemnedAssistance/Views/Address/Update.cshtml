@model CondemnedAssistance.ViewModels.AddressModel
@{
    Layout = "_Layout";
}
<form asp-controller="Address" asp-action="Update" method="post">
    <div>
        <div>
            <input type="hidden" asp-for="Id"/>
        </div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text"/>
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div>
            <label asp-for="AddressLevelId"></label>
            <input type="hidden" asp-for="AddressLevelId"/>
            <select disabled>
                <option selected>@Model.AddressLevels.First(a => a.Id == Model.AddressLevelId).Name</option>
            </select>
        </div>
        @if (Model.AddressParent != null) {
            <div>
                <label asp-for="AddressParentId"></label>
                <input type="hidden" asp-for="AddressParentId" />
                <select disabled>
                    <option selected>@Model.AddressParent.Name</option>
                </select>
            </div>
        }
        <div>
            <input type="submit" value="Save"/>
        </div>
    </div>
</form>