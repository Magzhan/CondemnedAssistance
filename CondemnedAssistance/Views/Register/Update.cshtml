@model CondemnedAssistance.ViewModels.RegisterModel
@{
    Layout = "_Layout";
}
<form asp-controller="Register" asp-action="Update">
    <div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <input type="text" asp-for="Name" />
    </div>
    <div>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <select asp-for="RegisterLevelId">
            @foreach(var r in Model.RegisterLevels) {
                <option value="@r.Id">@r.Name</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" />
    </div>
</form>
