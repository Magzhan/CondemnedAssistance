@model CondemnedAssistance.ViewModels.ChangePasswordModel
@{
    Layout = "_Layout_Sidebar";
}
<form asp-controller="Account" asp-action="ChangePassword" method="post">
    <div>
        <div>
            <label asp-for="OldPassword"></label>
            <input type="password" asp-for="OldPassword" />
            <span asp-validation-for="OldPassword"></span>
        </div>
        <div>
            <label asp-for="NewPassword"></label>
            <input type="password" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div>
            <label asp-for="ConfirmNewPassword"></label>
            <input type="password" asp-for="ConfirmNewPassword" />
            <span asp-validation-for="ConfirmNewPassword"></span>
        </div>
        <div>
            <input type="submit" value="Save"/>
        </div>
    </div>
</form>